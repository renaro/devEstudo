<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/season_card_width"
    android:layout_height="@dimen/season_card_height"
    style="@style/AppTheme.SeasonsCard"
    android:layout_marginTop="@dimen/simple_margin"
    android:layout_marginLeft="@dimen/simple_margin_left"
    >
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >


    <ImageView
        android:id="@+id/seasonCardImageView"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/season_card_image_view"
        android:src="@drawable/highlight_placeholder"
        android:scaleType="centerCrop"
        android:layout_alignParentTop="true"
        />
    <TextView
        android:id="@+id/seasonCardTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/simple_margin_top"
        android:layout_marginLeft="@dimen/simple_margin_left"
        android:text="Large Text"
        android:layout_below="@id/seasonCardImageView"
        />


    <TextView
        android:id="@+id/seasonCardQuantityEpisodes"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/seasonCardTitle"
        android:layout_marginLeft="@dimen/simple_margin_left"
        android:textColor="#a2a2a2"
        android:text="Small Text"
        />
</RelativeLayout>
</android.support.v7.widget.CardView>
