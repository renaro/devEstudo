<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="colorPrimary">@color/theme_colorPrimary</item>
        <item name="colorPrimaryDark">@color/theme_colorPrimaryDark</item>
        <item name="colorAccent">@color/theme_colorAccent</item>
        <item name="android:textColor">@color/theme_textColor</item>
        <item name="android:textColorPrimary">@color/theme_textColorPrimary</item>
        <item name="android:windowBackground">@color/theme_windowBackground</item>
    </style>


    <style name="AppTheme.EpisodeDetails" >

    </style>

    <style name="AppTheme.EpisodeDetails.Card" >
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:layout_marginTop">@dimen/card_margin_top</item>
        <item name="android:layout_marginLeft">@dimen/card_margin</item>
        <item name="android:layout_marginRight">@dimen/card_margin</item>
        <item name="cardCornerRadius">@dimen/card_cornerRadius</item>

    </style>

    <style name="AppTheme.EpisodeDetails.Card.ClockImage" >
        <item name="android:layout_marginBottom">@dimen/clockimage_card_padding_bottom</item>
        <item name="android:layout_marginLeft">@dimen/clockimage_card_padding_left</item>
        <item name="android:layout_marginTop">@dimen/clockimage_card_padding_top</item>
    </style>

    <style name="AppTheme.EpisodeDetails.Card.TextDate" >
        <item name="android:layout_marginBottom">@dimen/text_date_card_padding_bottom</item>
        <item name="android:layout_marginLeft">@dimen/text_date_card_padding_left</item>
        <item name="android:layout_marginTop">@dimen/text_date_card_padding_top</item>
        <item name="android:textSize">@dimen/text_date_card_size</item>
        <item name="android:textColor">@color/default_background_fourth</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="AppTheme.EpisodeDetails.SummaryText" >
        <item name="android:textColor">@color/summary_text_date_card</item>
        <item name="android:layout_marginLeft">@dimen/text_date_card_padding_left</item>
        <item name="android:layout_marginTop">@dimen/text_date_card_padding_left</item>
        <item name="android:textSize">@dimen/text_summary_card_size</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textStyle">bold</item>
    </style>


    <style name="AppTheme.EpisodeDetails.TextDescription" >
        <item name="android:textColor">@color/default_textColor_fourth</item>
        <item name="android:layout_marginLeft">@dimen/simple_margin</item>
        <item name="android:layout_marginRight">@dimen/simple_margin</item>
        <item name="android:layout_marginBottom">@dimen/simple_margin</item>
        <item name="android:textSize">@dimen/text_summary_card_size</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!-- TO BE CONTINUED -->

</resources>